@page "{id:guid}"
@model Quickunlocker.Web.Pages.AdminPanel.Devices.DeleteModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Device";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Delete Device</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/AdminPanel/Index">Home</a></li>
                    <li class="breadcrumb-item"><a href="/AdminPanel/Devices">Devices</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Confirm Deletion</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <h5><i class="icon fas fa-exclamation-triangle"></i> Warning!</h5>
                            Are you sure you want to delete this device?
                        </div>

                        <dl class="row">
                            <dt class="col-sm-3">TAC</dt>
                            <dd class="col-sm-9">@Model.Device.Tac</dd>

                            <dt class="col-sm-3">Brand</dt>
                            <dd class="col-sm-9">@Model.Device.Brand</dd>

                            <dt class="col-sm-3">Model</dt>
                            <dd class="col-sm-9">@Model.Device.Model</dd>

                            <dt class="col-sm-3">Created</dt>
                            <dd class="col-sm-9">@Model.Device.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                            @if (!string.IsNullOrEmpty(Model.Device.BrandLogoUrl))
                            {
                                <dt class="col-sm-3">Logo</dt>
                                <dd class="col-sm-9">
                                    <img src="@Model.Device.BrandLogoUrl" alt="@Model.Device.Brand" class="img-thumbnail" style="max-height:80px;" />
                                </dd>
                            }
                        </dl>

                        <div class="callout callout-info">
                            <h5><i class="fas fa-info-circle"></i> Note:</h5>
                            This is a soft delete. The device will be marked as deleted but will remain in the database for record-keeping purposes.
                        </div>
                    </div>
                    <!-- /.card-body -->
                    
                    <div class="card-footer">
                        <form method="post">
                            <button class="btn btn-danger" type="submit">
                                <i class="fas fa-trash"></i> Yes, Delete Device
                            </button>
                            <a class="btn btn-secondary" href="/AdminPanel/Devices">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </form>
                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
