@page
@model Quickunlocker.Web.Pages.AdminPanel.Countries.CreateModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add Country";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add New Country</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/AdminPanel/Index">Home</a></li>
                    <li class="breadcrumb-item"><a href="/AdminPanel/Countries">Countries</a></li>
                    <li class="breadcrumb-item active">Add Country</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Country Information</h3>
                    </div>
                    <form method="post">
                        <div class="card-body">
                            @if (!ModelState.IsValid)
                            {
                                <div class="alert alert-danger alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert">×</button>
                                    <h5><i class="icon fas fa-ban"></i> Error!</h5>
                                    <div asp-validation-summary="All"></div>
                                </div>
                            }
                            
                            <div class="form-group">
                                <label asp-for="Country.Name">Country Name *</label>
                                <input class="form-control" asp-for="Country.Name" placeholder="e.g., United States" />
                                <span asp-validation-for="Country.Name" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Country.Code">Country Code (ISO 3166) *</label>
                                <input class="form-control text-uppercase" asp-for="Country.Code" placeholder="e.g., US (2-3 characters)" maxlength="3" />
                                <span asp-validation-for="Country.Code" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    2 or 3 letter ISO country code. Examples: US, UK, IN, UAE
                                </small>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Country.FlagUrl">Flag Icon URL</label>
                                <input class="form-control" asp-for="Country.FlagUrl" placeholder="https://flagcdn.com/w40/us.png" />
                                <span asp-validation-for="Country.FlagUrl" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Optional: URL to the country flag image. We recommend using <a href="https://flagcdn.com/" target="_blank">flagcdn.com</a>
                                </small>
                            </div>

                            <div class="form-group">
                                <label asp-for="Country.DisplayOrder">Display Order</label>
                                <input type="number" class="form-control" asp-for="Country.DisplayOrder" />
                                <span asp-validation-for="Country.DisplayOrder" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Lower numbers appear first. Use 0 for default.
                                </small>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" asp-for="Country.IsActive" id="isActiveSwitch" checked />
                                    <label class="custom-control-label" for="isActiveSwitch">
                                        <strong>Enable this country</strong>
                                    </label>
                                </div>
                                <small class="form-text text-muted">
                                    Only enabled countries will be visible to users on the frontend.
                                </small>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-save"></i> Save Country
                            </button>
                            <a class="btn btn-secondary" href="/AdminPanel/Countries">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Quick Tips</h3>
                    </div>
                    <div class="card-body">
                        <h6><i class="fas fa-flag"></i> Flag Icons</h6>
                        <p class="small">Use <a href="https://flagcdn.com/" target="_blank">flagcdn.com</a> for free flag icons:</p>
                        <code class="small">
                            https://flagcdn.com/w40/us.png<br>
                            https://flagcdn.com/w40/kw.png<br>
                            https://flagcdn.com/w40/in.png
                        </code>
                        
                        <hr>
                        
                        <h6><i class="fas fa-code"></i> Country Codes</h6>
                        <p class="small">Common ISO codes:</p>
                        <ul class="small">
                            <li><strong>US</strong> - United States</li>
                            <li><strong>GB</strong> or <strong>UK</strong> - United Kingdom</li>
                            <li><strong>IN</strong> - India</li>
                            <li><strong>KW</strong> - Kuwait</li>
                            <li><strong>AE</strong> or <strong>UAE</strong> - United Arab Emirates</li>
                            <li><strong>SA</strong> - Saudi Arabia</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
