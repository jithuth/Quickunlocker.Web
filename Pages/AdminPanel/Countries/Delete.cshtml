@page "{id:guid}"
@model Quickunlocker.Web.Pages.AdminPanel.Countries.DeleteModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Country";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Delete Country</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/AdminPanel/Index">Home</a></li>
                    <li class="breadcrumb-item"><a href="/AdminPanel/Countries">Countries</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Confirm Deletion</h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <h5><i class="icon fas fa-exclamation-triangle"></i> Warning!</h5>
                            Are you sure you want to delete this country?
                        </div>

                        <dl class="row">
                            <dt class="col-sm-3">Country Name</dt>
                            <dd class="col-sm-9"><strong>@Model.Country.Name</strong></dd>

                            <dt class="col-sm-3">Country Code</dt>
                            <dd class="col-sm-9"><code>@Model.Country.Code</code></dd>

                            <dt class="col-sm-3">Display Order</dt>
                            <dd class="col-sm-9">@Model.Country.DisplayOrder</dd>

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">
                                @if (Model.Country.IsActive)
                                {
                                    <span class="badge badge-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Disabled</span>
                                }
                            </dd>

                            <dt class="col-sm-3">Created</dt>
                            <dd class="col-sm-9">@Model.Country.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                            @if (!string.IsNullOrEmpty(Model.Country.FlagUrl))
                            {
                                <dt class="col-sm-3">Flag</dt>
                                <dd class="col-sm-9">
                                    <img src="@Model.Country.FlagUrl" alt="@Model.Country.Name" class="img-thumbnail" style="max-height:60px;" />
                                </dd>
                            }
                        </dl>

                        <div class="callout callout-info">
                            <h5><i class="fas fa-info-circle"></i> Note:</h5>
                            This is a soft delete. The country will be marked as deleted but will remain in the database for record-keeping purposes.
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <form method="post">
                            <button class="btn btn-danger" type="submit">
                                <i class="fas fa-trash"></i> Yes, Delete Country
                            </button>
                            <a class="btn btn-secondary" href="/AdminPanel/Countries">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
