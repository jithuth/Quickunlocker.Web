<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quickunlocker.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Quickunlocker.Web.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(120deg, #0f2027 0%, #2c5364 100%, #37e2f1 120%);
            font-family: 'Montserrat', Arial, sans-serif;
        }
        .brand-logo {
            width: 56px;
            height: 56px;
            border-radius: 16px;
            margin: 0 8px;
            object-fit: cover;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.10);
            border: 2px solid #fff;
        }
        .wizard-box {
            background: rgba(34, 37, 70, 0.97);
            border-radius: 24px;
            box-shadow: 0 6px 30px rgba(51,51,80,0.09);
            padding: 2.5rem 2rem;
            color: #fff;
        }
        .gradient-btn {
            background: linear-gradient(90deg, #37e2f1 0%, #0f2027 100%);
            color: #fff !important;
            font-weight: bold;
            border: none;
            border-radius: 12px;
            transition: background .2s;
        }
        .gradient-btn:hover {
            background: linear-gradient(90deg, #0f2027 0%, #37e2f1 100%);
            color: #fff !important;
        }
        .video-card {
            background: #181f36;
            border-radius: 18px;
            overflow: hidden;
            margin-bottom: 32px;
            color: #fff;
            box-shadow: 0 2px 12px rgba(17,28,61,0.10);
            transition: transform .12s;
        }
        .video-card:hover {
            transform: translateY(-4px) scale(1.025);
        }
        .video-title {
            font-weight: bold;
            font-size: 1.12rem;
        }
        .video-label {
            display: inline-block;
            padding: 3px 10px;
            border-radius: 7px;
            background: #37e2f1;
            font-size: 0.8rem;
            color: #181f36;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Quickunlocker.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Quickunlocker.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
